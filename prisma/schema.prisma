datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  chatSessions  ChatSession[]
  mediaAssets   MediaAsset[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime

  @@unique([email, token])
}

model ChatSession {
  id        String    @id @default(cuid())
  title     String
  timestamp DateTime  @default(now())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  builderData Json? 
}

model Message {
  id            String      @id @default(cuid())
  role          String
  text          String      @db.Text
  images        Json?       // To be stored as JSON array of strings
  groundingUrls Json?
  sessionId     String
  chatSession   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  timestamp     DateTime    @default(now())
}

model MediaAsset {
  id          String   @id @default(cuid())
  data        String   @db.Text // Base64 string
  mimeType    String
  prompt      String   @db.Text
  timestamp   DateTime @default(now())
  model       String
  aspectRatio String
  imageSize   String
  type        String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
